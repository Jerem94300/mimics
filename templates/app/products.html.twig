{% extends 'base.html.twig' %}

{% block title %}
	Mimics | Shop

{% endblock %}

{% block body %}

	<style>
		.image_rupture {
			position: absolute;
			width: 150px;
			height: auto !important;
			opacity: 50%;

		}
	</style>

	<section class="product_section layout_padding">
		<div class="container">
			<div class="heading_container heading_center">
				<h2>
					Nos produits
				</h2>
			</div>
			<div class="row">
				{% for item in dbProduct %}
					<div class="col-sm-6 col-lg-4">
						<div class="box">
							<div class="img-box">
								{% if item.stock == 0 %}
									<img class="image_rupture" src="{{ asset('uploads/images/rupture_de_stock.JPG') }}" alt="">
									<img src="{{ asset('uploads/images/' ~ item.picture) }}" alt="">

								{% else %}
									<img src="{{ asset('uploads/images/' ~ item.picture) }}" alt="">
								{% endif %}

								<a href="{{ path('app_product_details', {'id': item.id}) }}" class=" add_cart_btn">
									<span>
										DÃ©tails
									</span>
								</a>
							</div>
							<div class="detail-box">
								<h5>
									{{ item.title }}

								</h5>
								<div class="product_info">
									<h5>
										<span>$</span>
										{{ item.price }}
									</h5>
									<div class="star_container">
										<i class="fa fa-star" aria-hidden="true"></i>
										<i class="fa fa-star" aria-hidden="true"></i>
										<i class="fa fa-star" aria-hidden="true"></i>
										<i class="fa fa-star" aria-hidden="true"></i>
										<i class="fa fa-star" aria-hidden="true"></i>
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>


			<div class="btn_box">
				<a href="" class="view_more-link">
					Voir Plus
				</a>
			</div>
		</div>
	</section>
	<div class="btn_box">
		<a href="" class="view_more-link">
			View More
		</a>
	</div>
</div></section><!-- end product section -->{% endblock %}
